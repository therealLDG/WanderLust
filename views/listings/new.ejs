<% layout('/layout/boilerplate') %>


  <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="row mt-3">
      <div class="col-6 offset-3">
        <br><br>
        <h3>Create a New Listing</h3>
        <div class="mb-3">
          <label for="Title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required />
          <div class="invalid-feedback">Please enter a title</div>
        </div>
        <div class="mb-3">
          <label for="Description" class="form-label">Description</label>
          <textarea name="listing[description]" placeholder="enter description" class="form-control"
            required></textarea>
          <div class="invalid-feedback">Description should be valid</div>
        </div>

        <div class="mb-3">
          <label for="image URL/Link" class="form-label">Upload Image</label>
          <input name="listing[image]" type="file" class="form-control" / required>
        </div>
        <div class="row">
          <div class="mb-3 col-md-5">
            <div class="btn-group">
              <button type="button" class="btn btn-secondary col-md-4 dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Choose Category
              </button>
              <ul class="dropdown-menu dropdown-menu-end drop-drop">
                <li><button class="dropdown-item" type="button">Rooms</button></li>
                <li><button class="dropdown-item" type="button">Iconic Cities</button></li>
                <li><button class="dropdown-item" type="button">Mountains</button></li>
                <li><button class="dropdown-item" type="button">Castles</button></li>
                <li><button class="dropdown-item" type="button">Amazing Pools</button></li>
                <li><button class="dropdown-item" type="button">Camping</button></li>
                <li><button class="dropdown-item" type="button">Farms</button></li>
                <li><button class="dropdown-item" type="button">Artic</button></li>
                <li><button class="dropdown-item" type="button">Hotel</button></li>
                <li><button class="dropdown-item" type="button">Fallout</button></li>
              </ul>
            </div>
          </div>
          <div class="mb-3  col-md-4">
            <input name="listing[category]" placeholder="category..." type="text" class="form-control category-input" readonly />
          </div>
        </div>



        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="Price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required />
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="Country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required />
            <div class="invalid-feedback">Country should be valid</div>
          </div>
        </div>



        <div class="mb-3">
          <label for="Location" class="form-label">Location</label>
          <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required />
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <button class="btn btn-dark add-btn">Add</button>
  </form>
  <br><br>
  </div>
  </div>


  <script src="/scripts/category.js"></script>